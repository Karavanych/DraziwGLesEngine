attribute vec4 aPosition;
attribute vec4 aColor;

varying vec4 vColor;

uniform mat4 uObjectMatrix;

void main() {

	gl_PointSize = 5.0;
	gl_Position = uObjectMatrix*aPosition;
	vColor = aColor;
	
}

[FRAGMENT]

precision mediump float;

varying vec4 vColor;

void main() {

	gl_FragColor = vColor;
	
}